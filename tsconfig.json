{
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["dom", "esnext"],
    "incremental": false,
    "module": "commonjs",
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "paths": {
      "@server/*": ["server/*"],
      "@src/*": ["*"]
    }
  },
  "exclude": ["dist/*", "node_modules", "coverage/*"]
}
